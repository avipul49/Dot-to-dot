<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/turn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/timer"
        android:background="@android:color/white"
        android:gravity="start|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:text="Player&apos;s Turn"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/timer"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="end|center_vertical"
        android:paddingLeft="0dp"
        android:paddingRight="10dp"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/clock"
        android:gravity="end|center_vertical"
        android:paddingLeft="0dp"
        android:paddingRight="10dp"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <SurfaceView
        android:id="@+id/mysurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/scores"
        android:layout_below="@+id/turn" />

    <TextView
        android:id="@+id/left_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/scores"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:text="+1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/scores"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="+1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/scores"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:weightSum="22" >

        <TextView
            android:id="@+id/player1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:text="PLayer 1"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/score1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="end|center_vertical"
            android:paddingLeft="0dp"
            android:paddingRight="12dp"
            android:text="00"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="start|center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="0dp"
            android:text="00"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="10dp"
            android:text="Player 2"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="vfdv"
        android:textSize="50dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/notificationImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:contentDescription="notification image"
        android:src="@drawable/clock_xl"
        android:visibility="gone" />

</RelativeLayout>