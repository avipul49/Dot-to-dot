<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theme_backgorund"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroumd"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/default_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:src="@drawable/tree" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/default_score"
        android:textColor="#00DE2C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bonus_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:src="@drawable/tree1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/bonus_score"
        android:textColor="#0021DE"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/panulty_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:src="@drawable/cactusicon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/panulty_score"
        android:textColor="#E60000"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>